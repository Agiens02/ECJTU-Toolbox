<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.lonx.ecjtutoolbox.ui.wifi.WifiViewModel" />
        <variable
            name="fragment"
            type="com.lonx.ecjtutoolbox.ui.wifi.WifiFragment" />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.wifi.WifiFragment">

        <!-- WiFi状态信息 -->
        <com.google.android.material.card.MaterialCardView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/wifiStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cardUseCompatPadding="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- WiFi状态图标 -->
                <ImageView
                    android:id="@+id/wifiStatusIcon"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_height="match_parent"
                    android:minHeight="80dp"
                    android:minWidth="80dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:onClick="@{(view) -> viewModel.openWifiSettings(view)}"
                    android:contentDescription="图标"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:srcCompat="@drawable/ic_wifi_disabled"
                    app:bindSrcCompat="@{viewModel.wifiStatusIcon}" />
                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wifiStatusIcon"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <!-- WiFi状态描述文本 -->
                <TextView
                    android:id="@+id/lbWifiStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:text="网络状态"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line1"
                    tools:text="Wi-Fi状态" />
                <TextView
                    android:id="@+id/tvWifiStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:text="@{viewModel.wifiStatusText}"
                    android:textColor="@color/secondaryText"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/wifiStatusIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="@string/wifi_disabled" />
                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvWifiStatusText"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <!-- 当前连接SSID显示 -->
                <TextView
                    android:id="@+id/lbSSID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:text="SSID"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="SSID" />
                <TextView
                    android:id="@+id/tvSSID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:text="@{viewModel.ssid1}"
                    android:textColor="@color/secondaryText"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="@{(view) -> viewModel.checkAndRequestPermissions(view)}"
                    tools:text="@string/ssid_not_connected" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:layout_constraintTop_toBottomOf="@id/wifiStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- 登录部分 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{(view) -> viewModel.loginIn(view)}">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <!-- 图标 -->
                        <ImageView
                            android:id="@+id/iconLogin"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wifi_login"
                            android:contentDescription="图标"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <!-- 文本 -->
                        <TextView
                            android:id="@+id/textLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.isLoggingIn ? @string/logging_in : @string/login}"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            app:layout_constraintStart_toEndOf="@+id/iconLogin"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="@string/login"/>
                        <ImageView
                            android:id="@+id/iconArrow1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="图标"
                            android:src="@drawable/ic_arrow_right"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iconLogin"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <!-- 注销部分 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{(view) -> viewModel.loginOut(view)}">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <!-- 图标 -->
                        <ImageView
                            android:id="@+id/iconLogout"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wifi_logout"
                            android:contentDescription="图标"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <!-- 文本 -->
                        <TextView
                            android:id="@+id/textLogout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.isLoggingOut ? @string/logging_out : @string/logout}"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            app:layout_constraintStart_toEndOf="@+id/iconLogout"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="@string/logout"/>
                        <ImageView
                            android:id="@+id/iconArrow2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="图标"
                            android:src="@drawable/ic_arrow_right"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iconLogout"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <!-- 账号配置部分 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{(view) -> viewModel.accountConfig(view)}">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <!-- 图标 -->
                        <ImageView
                            android:id="@+id/iconAccount"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wifi_account"
                            android:contentDescription="图标"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <!-- 文本 -->
                        <TextView
                            android:id="@+id/tvAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_config"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            app:layout_constraintStart_toEndOf="@+id/iconAccount"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <ImageView
                            android:id="@+id/iconArrow3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="图标"
                            android:src="@drawable/ic_arrow_right"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>
