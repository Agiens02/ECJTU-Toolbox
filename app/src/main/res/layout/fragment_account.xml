<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.lonx.ecjtutoolbox.utils.StuProfileInfo"/>
        <variable name="m" type="StuProfileInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.account.AccountFragment"
        android:padding="20dp">

        <!-- 头像 -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:contentDescription="头像"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 用户名 -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{m.userName}"
            android:textSize="20sp"
            android:textColor="@color/primaryText"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
            tools:text="用户名" />

        <!-- 性别 -->
        <TextView
            android:id="@+id/tvSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{m.SexName}"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/secondaryText"
            app:layout_constraintStart_toEndOf="@+id/tvName"
            app:layout_constraintBottom_toBottomOf="@+id/tvName"
            tools:text="性别"  />
        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAvatar"/>
        <!-- 学号 -->
        <TextView
            android:id="@+id/tvIdNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`学号：`+m.idNumber}"
            android:textSize="16sp"
            android:textColor="@color/secondaryText"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            tools:text="学号" />

        <!-- 分割线 1 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/tvIdNumber"
            app:layout_constraintEnd_toEndOf="@+id/tvIdNumber"
            app:layout_constraintTop_toBottomOf="@+id/tvIdNumber"/>

        <!-- 用户ID -->
        <TextView
            android:id="@+id/tvUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`用户ID：`+m.userId}"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvIdNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            tools:text="用户ID"  />

        <!-- 分割线 2 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/tvUserId"
            app:layout_constraintEnd_toEndOf="@+id/tvUserId"
            app:layout_constraintTop_toBottomOf="@+id/tvUserId"/>

        <!-- 单位 -->
        <TextView
            android:id="@+id/tvUnitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`单位：`+m.UnitName}"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvUserId"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            tools:text="单位"  />

        <!-- 分割线 3 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/tvUnitName"
            app:layout_constraintEnd_toEndOf="@+id/tvUnitName"
            app:layout_constraintTop_toBottomOf="@+id/tvUnitName"/>

        <!-- 生日 -->
        <TextView
            android:id="@+id/tvBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`生日：`+m.birthday}"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvUnitName"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            tools:text="生日"  />

        <!-- 分割线 4 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/tvBirthday"
            app:layout_constraintEnd_toEndOf="@+id/tvBirthday"
            app:layout_constraintTop_toBottomOf="@+id/tvBirthday"/>

        <!-- 身份 -->
        <TextView
            android:id="@+id/tvIdType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`身份：`+m.idTypeName}"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvBirthday"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            tools:text="身份" />

        <!-- 分割线 5 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/tvIdType"
            app:layout_constraintEnd_toEndOf="@+id/tvIdType"
            app:layout_constraintTop_toBottomOf="@+id/tvIdType"/>

        <!-- 手机号 -->
        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`手机号：`+m.mobile}"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvIdType"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            tools:text="手机号" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/tvMobile"
            app:layout_constraintEnd_toEndOf="@+id/tvMobile"
            app:layout_constraintTop_toBottomOf="@+id/tvMobile"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
